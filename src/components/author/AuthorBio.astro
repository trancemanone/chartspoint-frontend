---
/**
 * AuthorBio.astro
 * Premium author biography card for ITQQAN fintech platform
 *
 * Features:
 * - Large author avatar with verified badge
 * - Author name and credentials (E-E-A-T signals)
 * - Bio text with proper readability
 * - Social links with hover effects
 * - Trust badges for financial expertise
 * - Review attribution and dates
 * - Schema.org Person structured data
 * - Full RTL support and accessibility
 * - Optimized for 40-70 age group readability
 */

export interface SocialLink {
  platform: 'twitter' | 'linkedin' | 'website' | 'email';
  url: string;
  label?: string;
}

export interface Props {
  name: string;
  bio: string;
  avatar: string;
  /** Professional credentials (e.g., CFA, CFP) */
  credentials?: string[];
  /** Areas of expertise */
  expertise?: string[];
  /** Author page URL */
  authorUrl?: string;
  /** Social media and contact links */
  socialLinks?: SocialLink[];
  /** Reviewed by (default: ITQQAN team) */
  reviewedBy?: string;
  /** Article creation date (ISO format) */
  createdDate?: string;
  /** Article last modified date (ISO format) */
  modifiedDate?: string;
  /** Show trust badge */
  showTrustBadge?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  name,
  bio,
  avatar,
  credentials = [],
  expertise = [],
  authorUrl,
  socialLinks = [],
  reviewedBy = 'فريق إتقان',
  createdDate,
  modifiedDate,
  showTrustBadge = true,
  class: className = '',
} = Astro.props;

// Format dates for display
const formatDate = (dateString: string | undefined): string => {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('ar-SA', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// Social platform icons and labels
const socialPlatforms = {
  twitter: {
    label: 'تويتر',
    icon: '<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>',
  },
  linkedin: {
    label: 'لينكد إن',
    icon: '<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>',
  },
  website: {
    label: 'الموقع',
    icon: '<circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/><line x1="2" y1="12" x2="22" y2="12" fill="none" stroke="currentColor" stroke-width="2"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" fill="none" stroke="currentColor" stroke-width="2"/>',
  },
  email: {
    label: 'البريد الإلكتروني',
    icon: '<rect width="20" height="16" x="2" y="4" rx="2" fill="none" stroke="currentColor" stroke-width="2"/><path d="m22 6-10 7L2 6" fill="none" stroke="currentColor" stroke-width="2"/>',
  },
};

// Generate Schema.org Person structured data
const authorSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": name,
  "description": bio,
  "image": avatar,
  ...(authorUrl && { "url": authorUrl }),
  ...(credentials.length > 0 && { "hasCredential": credentials }),
  ...(expertise.length > 0 && { "knowsAbout": expertise }),
  ...(socialLinks.find(s => s.platform === 'twitter') && {
    "sameAs": socialLinks.filter(s => s.platform !== 'email').map(s => s.url)
  }),
};

const sectionId = `author-${Math.random().toString(36).slice(2, 9)}`;
---

<aside class={`author ${className}`} aria-labelledby={`${sectionId}-title`}>
  <h2 id={`${sectionId}-title`} class="sr-only">معلومات الكاتب</h2>

  <div class="author__card">
    {/* Header with avatar and basic info */}
    <div class="author__header">
      <div class="author__avatar-wrapper">
        {avatar ? (
          <img
            src={avatar}
            alt={`صورة ${name}`}
            class="author__avatar"
            width="96"
            height="96"
            loading="lazy"
            decoding="async"
          />
        ) : (
          <div class="author__avatar author__avatar--placeholder" aria-label={`صورة ${name}`}>
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </div>
        )}
        {showTrustBadge && (
          <span class="author__verified" aria-label="كاتب موثق">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              aria-hidden="true"
            >
              <circle cx="12" cy="12" r="10" fill="currentColor"/>
              <path
                d="M9 12l2 2 4-4"
                fill="none"
                stroke="#FFFFFF"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </span>
        )}
      </div>

      <div class="author__info">
        <h3 class="author__name">
          {authorUrl ? (
            <a href={authorUrl} class="author__name-link" rel="author">
              {name}
            </a>
          ) : (
            name
          )}
        </h3>
        <p class="author__role">كاتب متخصص في الشؤون المالية</p>

        {/* Social Links */}
        {socialLinks.length > 0 && (
          <div class="author__social">
            {socialLinks.map((link) => {
              const platform = socialPlatforms[link.platform];
              return (
                <a
                  href={link.url}
                  class="author__social-link"
                  aria-label={link.label || platform.label}
                  target={link.platform !== 'email' ? '_blank' : undefined}
                  rel={link.platform !== 'email' ? 'noopener noreferrer' : undefined}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill={link.platform === 'twitter' || link.platform === 'linkedin' ? 'currentColor' : 'none'}
                    aria-hidden="true"
                  >
                    <Fragment set:html={platform.icon} />
                  </svg>
                </a>
              );
            })}
          </div>
        )}
      </div>
    </div>

    {/* Bio */}
    <div class="author__body">
      <p class="author__bio">{bio}</p>

      {/* Credentials - E-E-A-T signal */}
      {credentials.length > 0 && (
        <div class="author__section">
          <h4 class="author__section-title">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
              <path d="M6 12v5c0 2 2 3 6 3s6-1 6-3v-5"/>
            </svg>
            <span>المؤهلات والشهادات</span>
          </h4>
          <ul class="author__credentials" role="list">
            {credentials.map((credential) => (
              <li class="author__credential">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                <span>{credential}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      {/* Expertise Areas - E-E-A-T signal */}
      {expertise.length > 0 && (
        <div class="author__section">
          <h4 class="author__section-title">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
            </svg>
            <span>مجالات الخبرة</span>
          </h4>
          <div class="author__expertise">
            {expertise.map((area) => (
              <span class="author__expertise-tag">{area}</span>
            ))}
          </div>
        </div>
      )}
    </div>

    {/* Footer with review info and dates */}
    <div class="author__footer">
      <div class="author__meta">
        <div class="author__meta-item">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
          <span class="author__meta-label">مراجعة:</span>
          <span class="author__meta-value">{reviewedBy}</span>
        </div>

        {createdDate && (
          <div class="author__meta-item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
              <line x1="16" x2="16" y1="2" y2="6"/>
              <line x1="8" x2="8" y1="2" y2="6"/>
              <line x1="3" x2="21" y1="10" y2="10"/>
            </svg>
            <span class="author__meta-label">تاريخ النشر:</span>
            <time class="author__meta-value" datetime={createdDate}>
              {formatDate(createdDate)}
            </time>
          </div>
        )}

        {modifiedDate && (
          <div class="author__meta-item">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
            <span class="author__meta-label">آخر تحديث:</span>
            <time class="author__meta-value" datetime={modifiedDate}>
              {formatDate(modifiedDate)}
            </time>
          </div>
        )}
      </div>
    </div>
  </div>
</aside>

{/* Schema.org Person structured data */}
<script type="application/ld+json" set:html={JSON.stringify(authorSchema)} />

<style>
  /* ═══════════════════════════════════════════════════════════════════════════
     AUTHOR CONTAINER
     ═══════════════════════════════════════════════════════════════════════════ */

  .author {
    margin: 2.5rem 0;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .author__card {
    background-color: #FFFFFF;
    border-radius: 1rem;
    border: 1px solid rgba(226, 232, 240, 0.8);
    border-right-width: 4px;
    border-right-color: #d5a035;
    overflow: hidden;
    box-shadow:
      0 2px 8px rgba(15, 23, 42, 0.04),
      0 4px 16px rgba(15, 23, 42, 0.04);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     HEADER
     ═══════════════════════════════════════════════════════════════════════════ */

  .author__header {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    padding: 1.5rem;
    background: linear-gradient(180deg, #F8FAFC 0%, #FFFFFF 100%);
    border-bottom: 1px solid #F1F5F9;
  }

  @media (min-width: 768px) {
    .author__header {
      padding: 2rem;
    }
  }

  /* Avatar */
  .author__avatar-wrapper {
    position: relative;
    flex-shrink: 0;
  }

  .author__avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #FFFFFF;
    box-shadow: 0 4px 12px rgba(15, 23, 42, 0.1);
  }

  @media (min-width: 768px) {
    .author__avatar {
      width: 96px;
      height: 96px;
    }
  }

  .author__verified {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background-color: #d5a035;
    color: #d5a035;
    border-radius: 50%;
    border: 3px solid #FFFFFF;
    box-shadow: 0 2px 6px rgba(213, 160, 53, 0.3);
  }

  /* Info */
  .author__info {
    flex: 1;
    min-width: 0;
  }

  .author__name {
    margin: 0 0 0.25rem;
    font-family: var(--font-heading);
    font-size: 1.375rem;
    font-weight: 700;
    color: #102A43;
    line-height: 1.3;
  }

  @media (min-width: 768px) {
    .author__name {
      font-size: 1.5rem;
    }
  }

  .author__name-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .author__name-link:hover {
    color: #d5a035;
  }

  .author__name-link:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(213, 160, 53, 0.4);
    border-radius: 0.25rem;
  }

  .author__role {
    margin: 0;
    font-size: 0.9375rem;
    color: #64748B;
  }

  /* Social Links */
  .author__social {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.875rem;
  }

  .author__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: #64748B;
    background-color: #F1F5F9;
    border-radius: 50%;
    transition:
      color 0.2s ease,
      background-color 0.2s ease,
      transform 0.2s ease;
  }

  .author__social-link:hover {
    color: #FFFFFF;
    background-color: #d5a035;
    transform: translateY(-2px);
  }

  .author__social-link:focus-visible {
    outline: none;
    box-shadow:
      0 0 0 3px #FFFFFF,
      0 0 0 6px rgba(213, 160, 53, 0.4);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     BODY
     ═══════════════════════════════════════════════════════════════════════════ */

  .author__body {
    padding: 1.5rem;
  }

  @media (min-width: 768px) {
    .author__body {
      padding: 2rem;
    }
  }

  .author__bio {
    margin: 0 0 1.5rem;
    font-size: 1.0625rem;
    line-height: 1.75;
    color: #334155;
  }

  @media (min-width: 768px) {
    .author__bio {
      font-size: 1.125rem;
    }
  }

  /* Sections */
  .author__section {
    margin-bottom: 1.5rem;
  }

  .author__section:last-child {
    margin-bottom: 0;
  }

  .author__section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 0 0.75rem;
    font-family: var(--font-heading);
    font-size: 1rem;
    font-weight: 600;
    color: #102A43;
  }

  .author__section-title svg {
    color: #d5a035;
    flex-shrink: 0;
  }

  /* Credentials */
  .author__credentials {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .author__credential {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    padding: 0.5rem 0;
    font-size: 0.9375rem;
    color: #475569;
  }

  .author__credential svg {
    flex-shrink: 0;
    color: #d5a035;
    margin-top: 0.125rem;
  }

  /* Expertise */
  .author__expertise {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .author__expertise-tag {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #d5a035;
    background-color: rgba(213, 160, 53, 0.08);
    border-radius: 9999px;
    transition: background-color 0.2s ease;
  }

  .author__expertise-tag:hover {
    background-color: rgba(213, 160, 53, 0.14);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     FOOTER
     ═══════════════════════════════════════════════════════════════════════════ */

  .author__footer {
    padding: 1.25rem 1.5rem;
    background-color: #F8FAFC;
    border-top: 1px solid #F1F5F9;
  }

  @media (min-width: 768px) {
    .author__footer {
      padding: 1.25rem 2rem;
    }
  }

  .author__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem 1.5rem;
  }

  .author__meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #475569;
  }

  .author__meta-item svg {
    color: #94A3B8;
    flex-shrink: 0;
  }

  .author__meta-label {
    color: #64748B;
  }

  .author__meta-value {
    font-weight: 500;
    color: #334155;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     FOCUS STATES
     ═══════════════════════════════════════════════════════════════════════════ */

  .author__card:focus-within {
    box-shadow:
      0 2px 8px rgba(15, 23, 42, 0.04),
      0 4px 16px rgba(15, 23, 42, 0.04),
      0 0 0 3px rgba(213, 160, 53, 0.2);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     REDUCED MOTION
     ═══════════════════════════════════════════════════════════════════════════ */

  @media (prefers-reduced-motion: reduce) {
    .author__name-link,
    .author__social-link,
    .author__expertise-tag {
      transition: none;
    }

    .author__social-link:hover {
      transform: none;
    }
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     PRINT STYLES
     ═══════════════════════════════════════════════════════════════════════════ */

  @media print {
    .author__card {
      box-shadow: none;
      border: 1px solid #CBD5E1;
    }

    .author__social {
      display: none;
    }

    .author__verified {
      display: none;
    }
  }
</style>
