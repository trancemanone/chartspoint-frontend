---
/**
 * RelatedArticles.astro
 * Premium related articles grid for ITQQAN fintech platform
 *
 * Features:
 * - Responsive 3-4 column grid layout
 * - Pillar color-coded cards with hover effects
 * - Featured image with aspect ratio and zoom
 * - Link to cluster page
 * - Full RTL support and accessibility
 * - Optimized for 40-70 age group readability
 */

import type { PillarSlug } from '@lib/types';

export interface RelatedArticle {
  title: string;
  slug: string;
  pillar: PillarSlug;
  cluster?: string;
  excerpt: string;
  image?: string;
  readingTime?: number;
}

export interface Props {
  articles: RelatedArticle[];
  title?: string;
  /** Number of columns on desktop (3 or 4) */
  columns?: 3 | 4;
  /** Link to show more articles */
  moreLink?: string;
  moreLinkText?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  articles,
  title = 'مقالات ذات صلة',
  columns = 3,
  moreLink,
  moreLinkText = 'عرض المزيد',
  class: className = '',
} = Astro.props;

// Pillar labels in Arabic
const pillarLabels: Record<PillarSlug, string> = {
  learn: 'تعلم',
  accounts: 'حسابات',
  trust: 'ثقة',
};

// Default placeholder image
const defaultImage = '/images/placeholder-article.webp';

// Section ID for accessibility
const sectionId = `related-${Math.random().toString(36).slice(2, 9)}`;
---

<section
  class={`related ${className}`}
  aria-labelledby={`${sectionId}-title`}
>
  <div class="related__header">
    <h2 id={`${sectionId}-title`} class="related__title">
      <span>{title}</span>
    </h2>

    {moreLink && (
      <a href={moreLink} class="related__more-link">
        <span>{moreLinkText}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <line x1="5" y1="12" x2="19" y2="12"/>
          <polyline points="12 5 19 12 12 19"/>
        </svg>
      </a>
    )}
  </div>

  <div class={`related__grid related__grid--${columns}`}>
    {articles.map((article) => {
      const articleUrl = article.cluster
        ? `/${article.pillar}/${article.cluster}/${article.slug}`
        : `/${article.pillar}/${article.slug}`;

      return (
        <article class="related__card" data-pillar={article.pillar}>
          <a href={articleUrl} class="related__card-link">
            {/* Image */}
            <div class="related__card-image-wrapper">
              <img
                src={article.image || defaultImage}
                alt=""
                class="related__card-image"
                loading="lazy"
                decoding="async"
                width="400"
                height="225"
              />
              <span class="related__card-badge" data-pillar={article.pillar}>
                {pillarLabels[article.pillar]}
              </span>
            </div>

            {/* Content */}
            <div class="related__card-content">
              <h3 class="related__card-title">
                {article.title}
              </h3>
              <p class="related__card-excerpt">
                {article.excerpt}
              </p>

              {/* Footer */}
              <div class="related__card-footer">
                {article.readingTime && (
                  <span class="related__card-reading-time">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="14"
                      height="14"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    <span>{article.readingTime} دقائق</span>
                  </span>
                )}
                <span class="related__card-cta">
                  اقرأ المزيد
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    aria-hidden="true"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"/>
                    <polyline points="12 5 19 12 12 19"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </article>
      );
    })}
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════════════════
     SECTION CONTAINER
     ═══════════════════════════════════════════════════════════════════════════ */

  .related {
    margin: 3rem 0;
    padding: 2.5rem 0;
    border-top: 1px solid #E2E8F0;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     HEADER
     ═══════════════════════════════════════════════════════════════════════════ */

  .related__header {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-end;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .related__header {
      margin-bottom: 2rem;
    }
  }

  /* Title with custom underline */
  .related__title {
    position: relative;
    margin: 0;
    padding-bottom: 1rem;
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: #102A43;
  }

  @media (min-width: 768px) {
    .related__title {
      font-size: 2rem;
    }
  }

  .related__title::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    height: 4px;
    width: 100%;
    max-width: 200px;
    background: linear-gradient(
      to left,
      #d5a035 0%,
      #d5a035 40%,
      #E2E8F0 40%,
      transparent 100%
    );
    border-radius: 2px;
  }

  /* More link */
  .related__more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: #d5a035;
    text-decoration: none;
    background-color: rgba(213, 160, 53, 0.06);
    border-radius: 0.5rem;
    transition:
      background-color 0.2s ease,
      gap 0.2s ease;
  }

  .related__more-link:hover {
    background-color: rgba(213, 160, 53, 0.12);
    gap: 0.75rem;
  }

  .related__more-link:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(213, 160, 53, 0.4);
  }

  .related__more-link svg {
    transform: scaleX(-1);
    transition: transform 0.2s ease;
  }

  .related__more-link:hover svg {
    transform: scaleX(-1) translateX(-2px);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     GRID LAYOUT
     ═══════════════════════════════════════════════════════════════════════════ */

  .related__grid {
    display: grid;
    gap: 1.5rem;
  }

  .related__grid--3,
  .related__grid--4 {
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .related__grid--3,
    .related__grid--4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .related__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .related__grid--4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     CARD STYLES
     ═══════════════════════════════════════════════════════════════════════════ */

  .related__card {
    --card-pillar-color: #d5a035;

    background-color: #FFFFFF;
    border-radius: 0.875rem;
    overflow: hidden;
    border: 1px solid rgba(226, 232, 240, 0.8);
    border-right-width: 4px;
    border-right-color: var(--card-pillar-color);
    box-shadow:
      0 2px 8px rgba(15, 23, 42, 0.04),
      0 4px 16px rgba(15, 23, 42, 0.04);
    transition:
      box-shadow 0.3s cubic-bezier(0.45, 0, 0.15, 1),
      transform 0.3s cubic-bezier(0.45, 0, 0.15, 1);
  }

  /* Pillar colors */
  .related__card[data-pillar="learn"] {
    --card-pillar-color: #3B82F6;
  }

  .related__card[data-pillar="accounts"] {
    --card-pillar-color: #d5a035;
  }

  .related__card[data-pillar="trust"] {
    --card-pillar-color: #7C2D3C;
  }

  .related__card:hover {
    box-shadow:
      0 12px 32px rgba(15, 23, 42, 0.1),
      0 24px 64px rgba(15, 23, 42, 0.06);
    transform: translateY(-4px);
  }

  .related__card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .related__card-link:focus-visible {
    outline: none;
  }

  .related__card:focus-within {
    box-shadow:
      0 12px 32px rgba(15, 23, 42, 0.1),
      0 0 0 3px #FFFFFF,
      0 0 0 6px var(--card-pillar-color);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     CARD IMAGE
     ═══════════════════════════════════════════════════════════════════════════ */

  .related__card-image-wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #F1F5F9;
  }

  .related__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.45, 0, 0.15, 1);
  }

  .related__card:hover .related__card-image {
    transform: scale(1.05);
  }

  /* Badge */
  .related__card-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #FFFFFF;
    border-radius: 9999px;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .related__card-badge[data-pillar="learn"] {
    background-color: rgba(59, 130, 246, 0.92);
  }

  .related__card-badge[data-pillar="accounts"] {
    background-color: rgba(213, 160, 53, 0.92);
  }

  .related__card-badge[data-pillar="trust"] {
    background-color: rgba(168, 85, 247, 0.92);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     CARD CONTENT
     ═══════════════════════════════════════════════════════════════════════════ */

  .related__card-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 1.25rem;
  }

  @media (min-width: 768px) {
    .related__card-content {
      padding: 1.5rem;
    }
  }

  /* Title */
  .related__card-title {
    margin: 0 0 0.625rem;
    font-family: var(--font-heading);
    font-size: 1.0625rem;
    font-weight: 600;
    line-height: 1.4;
    color: #102A43;
    transition: color 0.2s ease;

    /* 2-line clamp */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .related__card-title {
      font-size: 1.125rem;
    }
  }

  .related__card:hover .related__card-title {
    color: var(--card-pillar-color);
  }

  /* Excerpt */
  .related__card-excerpt {
    margin: 0;
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #64748B;

    /* 2-line clamp */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Footer */
  .related__card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    margin-top: auto;
    padding-top: 1rem;
  }

  .related__card-reading-time {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    color: #94A3B8;
  }

  .related__card-cta {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--card-pillar-color);
    transition: gap 0.2s ease;
  }

  .related__card-cta svg {
    transform: scaleX(-1);
    transition: transform 0.2s ease;
  }

  .related__card:hover .related__card-cta {
    gap: 0.625rem;
  }

  .related__card:hover .related__card-cta svg {
    transform: scaleX(-1) translateX(-2px);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     EMPTY STATE
     ═══════════════════════════════════════════════════════════════════════════ */

  .related__grid:empty::after {
    content: 'لا توجد مقالات ذات صلة';
    display: block;
    text-align: center;
    padding: 3rem;
    color: #64748B;
    font-size: 1rem;
    grid-column: 1 / -1;
    background-color: #F8FAFC;
    border-radius: 0.75rem;
    border: 1px dashed #E2E8F0;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     TOUCH DEVICE OPTIMIZATIONS
     ═══════════════════════════════════════════════════════════════════════════ */

  @media (hover: none) and (pointer: coarse) {
    .related__card:hover {
      transform: none;
      box-shadow:
        0 2px 8px rgba(15, 23, 42, 0.04),
        0 4px 16px rgba(15, 23, 42, 0.04);
    }

    .related__card:hover .related__card-image {
      transform: none;
    }

    .related__card:active {
      transform: scale(0.99);
    }
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     REDUCED MOTION
     ═══════════════════════════════════════════════════════════════════════════ */

  @media (prefers-reduced-motion: reduce) {
    .related__card,
    .related__card-image,
    .related__card-title,
    .related__card-cta,
    .related__more-link {
      transition: none;
    }

    .related__card:hover {
      transform: none;
    }

    .related__card:hover .related__card-image {
      transform: none;
    }
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     PRINT STYLES
     ═══════════════════════════════════════════════════════════════════════════ */

  @media print {
    .related {
      border-top: 2px solid #CBD5E1;
    }

    .related__card {
      box-shadow: none;
      border: 1px solid #CBD5E1;
      break-inside: avoid;
    }

    .related__card-badge,
    .related__card-cta {
      display: none;
    }

    .related__more-link {
      display: none;
    }
  }
</style>
