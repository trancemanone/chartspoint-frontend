---
/**
 * IconAcademy - Graduation cap
 * Represents advanced learning and courses
 * 24x24 grid, 1.75px stroke for readability (ages 40-70)
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Graduation cap top -->
  <path d="M22 10L12 5 2 10l10 5 10-5v6" />

  <!-- Cap bottom -->
  <path d="M6 12v5c0 1.5 2.5 3 6 3s6-1.5 6-3v-5" />
</svg>
