---
/**
 * IconAccounts - Wallet with card slot
 * Represents financial accounts and trading (Accounts pillar)
 * Premium fintech icon with bold strokes
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Wallet body - refined institutional look -->
  <rect x="2" y="6" width="20" height="14" rx="2" />
  <!-- Wallet flap - premium detail -->
  <path d="M2 10h20" />
  <!-- Card slot indicator - trading capability -->
  <rect x="14" y="13" width="4" height="3" rx="0.5" />
</svg>
