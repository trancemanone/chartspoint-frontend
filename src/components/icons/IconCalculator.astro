---
/**
 * IconCalculator - Calculator tool
 * Represents tools pillar
 * 24x24 grid, 1.75px stroke for readability (ages 40-70)
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Calculator body -->
  <rect x="4" y="2" width="16" height="20" rx="2" />

  <!-- Screen -->
  <rect x="6" y="4" width="12" height="4" rx="1" />

  <!-- Buttons row 1 -->
  <line x1="7" y1="11" x2="7" y2="11.01" />
  <line x1="12" y1="11" x2="12" y2="11.01" />
  <line x1="17" y1="11" x2="17" y2="11.01" />

  <!-- Buttons row 2 -->
  <line x1="7" y1="15" x2="7" y2="15.01" />
  <line x1="12" y1="15" x2="12" y2="15.01" />
  <line x1="17" y1="15" x2="17" y2="15.01" />

  <!-- Buttons row 3 -->
  <line x1="7" y1="19" x2="7" y2="19.01" />
  <line x1="12" y1="19" x2="12" y2="19.01" />
  <line x1="17" y1="19" x2="17" y2="19.01" />
</svg>
