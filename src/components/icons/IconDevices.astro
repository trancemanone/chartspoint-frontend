---
/**
 * IconDevices - Multiple devices
 * Represents multi-platform access
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Laptop -->
  <rect x="2" y="4" width="14" height="10" rx="1" />
  <path d="M1 14h16" />
  <!-- Phone -->
  <rect x="16" y="8" width="6" height="12" rx="1" />
  <line x1="19" y1="17" x2="19" y2="17.01" />
</svg>
