---
/**
 * IconFilter - Filter funnel
 * Represents filtering and sorting tools
 * 24x24 grid, 1.75px stroke for readability (ages 40-70)
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3" />
</svg>
