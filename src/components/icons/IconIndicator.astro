---
/**
 * IconIndicator - Technical indicator (oscillator wave)
 * Represents technical indicators pillar
 * 24x24 grid, 1.75px stroke for readability (ages 40-70)
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Oscillator wave pattern -->
  <path d="M2 12c1.5-3 3-6 4.5-3s3 6 4.5 3 3-6 4.5-3 3 6 4.5 3" />

  <!-- Horizontal reference lines -->
  <line x1="2" y1="6" x2="22" y2="6" stroke-dasharray="2 2" opacity="0.5" />
  <line x1="2" y1="18" x2="22" y2="18" stroke-dasharray="2 2" opacity="0.5" />

  <!-- Center line -->
  <line x1="2" y1="12" x2="22" y2="12" stroke-dasharray="4 2" opacity="0.3" />
</svg>
