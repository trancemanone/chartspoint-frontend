---
/**
 * IconLearn - Open book with chart line
 * Represents education and financial learning (Learn pillar)
 * Premium fintech icon with bold strokes
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Book base with refined strokes -->
  <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
  <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
  <!-- Chart line on book - knowledge growth indicator -->
  <path d="M6 8l2 2 3-3" />
</svg>
