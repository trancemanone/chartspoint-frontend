---
/**
 * IconPortfolio - Portfolio briefcase
 * Represents portfolio management and holdings
 * 24x24 grid, 1.75px stroke for readability (ages 40-70)
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Briefcase body -->
  <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />

  <!-- Handle -->
  <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />

  <!-- Pie chart inside (representing diversification) -->
  <circle cx="12" cy="14" r="3" />
  <path d="M12 11v3l2 1" />
</svg>
