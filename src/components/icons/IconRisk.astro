---
/**
 * IconRisk - Risk management
 * Represents risk assessment and management (core ChartsPoint theme)
 * 24x24 grid, 1.75px stroke for readability (ages 40-70)
 */
interface Props {
  class?: string;
  size?: number;
  strokeWidth?: number;
}

const { class: className = '', size = 24, strokeWidth = 1.75 } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  width={size}
  height={size}
  aria-hidden="true"
>
  <!-- Scale/balance representing risk-reward -->
  <path d="M12 3v18" />
  <path d="M5 6l7-3 7 3" />

  <!-- Left pan (risk) -->
  <path d="M2 14l3-8 3 8" />
  <path d="M2 14h6" />

  <!-- Right pan (reward) -->
  <path d="M16 14l3-8 3 8" />
  <path d="M16 14h6" />

  <!-- Base -->
  <path d="M9 21h6" />
</svg>
