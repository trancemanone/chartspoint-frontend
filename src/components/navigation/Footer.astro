---
/**
 * Footer Component - Trust Signature Design
 *
 * ChartsPoint institutional footer featuring:
 * - 4-column layout: About, Pillars, Resources, Legal
 * - Trust links (CRITICAL for YMYL compliance): About/Privacy/Terms/Risk/How We Make Money
 * - Educational disclaimer
 * - WhatsApp floating button spec
 * - Risk warning placement
 *
 * Per Vision Document:
 * "Google ينظر للـ Footer كـ توقيع الثقة"
 * The footer is Google's trust signature - must contain all trust-building links
 *
 * Optimized for Arabic readers ages 40-70 with WCAG AAA compliance.
 */

import type { PillarSlug } from '../../lib/types';
import { PILLARS, CLUSTERS } from '../../lib/types';

interface FooterLink {
  label: string;
  href: string;
  external?: boolean;
}

interface SocialLink {
  label: string;
  href: string;
  icon: 'twitter' | 'linkedin' | 'youtube' | 'telegram';
}

// About section content - Educational focus per Vision
const aboutDescription = 'منصة تعليمية متخصصة في التحليل الفني للأسواق المالية. نركز على الفهم العميق وإدارة المخاطر، لا على الوعود أو التوصيات.';

// Pillar navigation - 4 ChartsPoint pillars
const pillarLinks: FooterLink[] = [
  { label: PILLARS.basics.nameAr, href: '/basics' },
  { label: PILLARS.indicators.nameAr, href: '/indicators' },
  { label: PILLARS.tools.nameAr, href: '/tools' },
  { label: PILLARS.tactics.nameAr, href: '/tactics' },
];

// Resources section
const resourceLinks: FooterLink[] = [
  { label: 'الأسئلة الشائعة', href: '/faq' },
  { label: 'اتصل بنا', href: '/contact' },
  { label: 'من نحن', href: '/about' },
];

// Legal section - CRITICAL for YMYL compliance
// Per Vision: "روابط: About / Privacy / Terms / Risk / How we make money"
const legalLinks: FooterLink[] = [
  { label: 'سياسة الخصوصية', href: '/privacy' },
  { label: 'الشروط والأحكام', href: '/terms' },
  { label: 'إخلاء المسؤولية', href: '/disclaimer' },
  { label: 'سياسة ملفات تعريف الارتباط', href: '/cookies' },
  { label: 'كيف نحقق دخلا', href: '/how-we-make-money' }, // CRITICAL for trust
];

// Social links
const socialLinks: SocialLink[] = [
  { label: 'تويتر', href: 'https://twitter.com/chartspoint', icon: 'twitter' },
  { label: 'لينكد إن', href: 'https://linkedin.com/company/chartspoint', icon: 'linkedin' },
  { label: 'يوتيوب', href: 'https://youtube.com/@chartspoint', icon: 'youtube' },
  { label: 'تيليجرام', href: 'https://t.me/chartspoint', icon: 'telegram' },
];

// Trust badges
const trustBadges = [
  { label: 'محتوى تعليمي', icon: 'book' },
  { label: 'بدون توصيات', icon: 'shield' },
  { label: 'التركيز على المخاطر', icon: 'target' },
];

const currentYear = new Date().getFullYear();

// Risk disclaimer - Per Vision Document (مهم جدا)
const riskDisclaimer = 'هذا الموقع تعليمي فقط. التداول ينطوي على مخاطر. التحليل الفني لا يضمن نتائج. إدارة المخاطر أساسية لأي قرار استثماري. المعلومات المقدمة لا تشكل نصيحة مالية أو توصية بالتداول.';
---

<footer
  class="footer-wrapper"
  role="contentinfo"
  aria-label="تذييل الموقع"
>
  <!-- Main Footer Content -->
  <div class="footer-main">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-12 gap-8 lg:gap-6">

        <!-- Column 1: About & Brand (spans 4 cols) -->
        <div class="lg:col-span-4">
          <!-- Logo -->
          <a
            href="/"
            class="footer-logo inline-flex items-center gap-3 mb-5"
            aria-label="ChartsPoint - الصفحة الرئيسية"
          >
            <div class="logo-mark w-11 h-11 rounded-lg bg-white/10 flex items-center justify-center border border-white/10">
              <svg class="w-6 h-6 text-teal-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M3 3v18h18" />
                <path d="M7 16l4-8 4 4 5-9" />
              </svg>
            </div>
            <div class="flex flex-col">
              <span class="font-heading text-lg font-bold text-white leading-tight">ChartsPoint</span>
              <span class="text-xs text-navy-300 leading-tight">التحليل الفني</span>
            </div>
          </a>

          <!-- Description - Educational Focus -->
          <p class="footer-description text-navy-200 text-[0.9375rem] leading-relaxed mb-6 max-w-xs">
            {aboutDescription}
          </p>

          <!-- Social Links -->
          <div class="social-section">
            <h3 class="text-white font-semibold text-base mb-3">
              تابعنا
            </h3>
            <div class="social-links flex items-center gap-3">
              {socialLinks.map((link) => (
                <a
                  href={link.href}
                  class="social-link group"
                  aria-label={`تابعنا على ${link.label}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {link.icon === 'twitter' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  )}
                  {link.icon === 'linkedin' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  )}
                  {link.icon === 'youtube' && (
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                  )}
