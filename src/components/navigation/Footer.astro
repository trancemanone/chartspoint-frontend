                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                    </svg>
                  )}
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Column 2: Pillars (spans 2 cols) -->
        <nav class="lg:col-span-2" aria-label="أقسام التحليل الفني">
          <h2 class="footer-heading">
            المحتوى التعليمي
          </h2>
          <ul class="footer-links" role="list">
            {pillarLinks.map((link) => (
              <li>
                <a href={link.href} class="footer-link">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Column 3: Resources (spans 3 cols) -->
        <nav class="lg:col-span-3" aria-label="المصادر">
          <h2 class="footer-heading">
            المصادر
          </h2>
          <ul class="footer-links" role="list">
            {resourceLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="footer-link"
                  {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
                >
                  {link.label}
                  {link.external && (
                    <svg class="inline-block w-3.5 h-3.5 mr-1 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  )}
                </a>
              </li>
            ))}
          </ul>

          <!-- Trust Badges -->
          <div class="trust-badges mt-8">
            <div class="flex flex-wrap gap-2">
              {trustBadges.map((badge) => (
                <div class="trust-badge">
                  {badge.icon === 'book' && (
                    <svg class="w-4 h-4 text-teal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.75" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                  )}
                  {badge.icon === 'shield' && (
                    <svg class="w-4 h-4 text-teal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.75" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  )}
                  {badge.icon === 'target' && (
                    <svg class="w-4 h-4 text-teal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.75" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  <span>{badge.label}</span>
                </div>
              ))}
            </div>
          </div>
        </nav>

        <!-- Column 4: Legal - CRITICAL for YMYL (spans 3 cols) -->
        <nav class="lg:col-span-3" aria-label="الصفحات القانونية">
          <h2 class="footer-heading">
            قانوني
          </h2>
          <ul class="footer-links" role="list">
            {legalLinks.map((link) => (
              <li>
                <a href={link.href} class="footer-link">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Risk Warning Section - Per Vision: "صفحات الاستراتيجيات + Footer" -->
  <div class="risk-warning-section">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="risk-warning">
        <svg class="w-5 h-5 flex-shrink-0 text-warning-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.75" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <p class="risk-warning-text">
          <strong>تحذير المخاطر:</strong> {riskDisclaimer}
        </p>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="footer-bottom-content">
        <!-- Copyright -->
        <p class="copyright">
          جميع الحقوق محفوظة &copy; {currentYear} ChartsPoint
        </p>

        <!-- Educational Statement - Per Vision -->
        <p class="disclaimer">
          ChartsPoint موقع تعليمي تحليلي. لسنا منصة تداول، ولا وسطاء، ولا نقدم توصيات مالية.
        </p>
      </div>
    </div>
  </div>
</footer>

<!-- WhatsApp Floating Button - Per Vision: "نعم، لكن بحذر" -->
<a
  href="https://wa.me/966500000000?text=لدي%20سؤال%20حول%20التحليل%20الفني"
  class="whatsapp-float"
  target="_blank"
  rel="noopener noreferrer"
  aria-label="هل لديك سؤال تعليمي؟ تواصل عبر واتساب"
  data-whatsapp-float
>
  <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
