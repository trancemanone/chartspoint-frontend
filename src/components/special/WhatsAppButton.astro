---
/**
 * WhatsAppButton.astro
 * Premium floating WhatsApp contact button for CHARTSPOINT fintech platform
 *
 * Features:
 * - Fixed position floating button
 * - WhatsApp brand styling
 * - Pre-filled message support
 * - Pulse animation option
 * - Tooltip on hover
 * - Accessible with proper ARIA labels
 * - Mobile-friendly touch target (64px)
 * - Optimized for users aged 40-70
 */

export interface Props {
  /** WhatsApp phone number (include country code, no + or spaces) */
  phoneNumber: string;
  /** Pre-filled message text */
  message?: string;
  /** Show pulse animation to attract attention */
  pulse?: boolean;
  /** Button position */
  position?: 'bottom-left' | 'bottom-right';
  /** Vertical offset from bottom (in rem) */
  offsetBottom?: number;
  /** Horizontal offset from side (in rem) */
  offsetSide?: number;
  /** Show tooltip on hover */
  showTooltip?: boolean;
  /** Tooltip text */
  tooltipText?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  phoneNumber,
  message = '',
  pulse = true,
  position = 'bottom-left', // RTL: appears on left
  offsetBottom = 2,
  offsetSide = 2,
  showTooltip = true,
  tooltipText = 'تواصل معنا عبر واتساب',
  class: className = '',
} = Astro.props;

// Build WhatsApp URL
const encodedMessage = encodeURIComponent(message);
const whatsappUrl = `https://wa.me/${phoneNumber}${message ? `?text=${encodedMessage}` : ''}`;

// Position classes
const positionClasses = position === 'bottom-left'
  ? `bottom-[${offsetBottom}rem] left-[${offsetSide}rem]`
  : `bottom-[${offsetBottom}rem] right-[${offsetSide}rem]`;

// Tooltip position
const tooltipPosition = position === 'bottom-left' ? 'tooltip--right' : 'tooltip--left';
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class={`whatsapp-btn ${pulse ? 'whatsapp-btn--pulse' : ''} ${className}`}
  style={`bottom: ${offsetBottom}rem; ${position === 'bottom-left' ? `left: ${offsetSide}rem;` : `right: ${offsetSide}rem;`}`}
  aria-label={tooltipText}
  data-whatsapp-btn
>
  {/* WhatsApp Icon */}
  <svg
    class="whatsapp-btn__icon"
    viewBox="0 0 24 24"
    fill="currentColor"
    aria-hidden="true"
  >
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
  </svg>

  {/* Tooltip */}
  {showTooltip && (
    <span class={`whatsapp-btn__tooltip ${tooltipPosition}`}>
      {tooltipText}
    </span>
  )}

  {/* Pulse Ring */}
  {pulse && (
    <span class="whatsapp-btn__pulse" aria-hidden="true"></span>
  )}
</a>

<style>
  /* ═══════════════════════════════════════════════════════════════════════════
     WHATSAPP BUTTON BASE
     ═══════════════════════════════════════════════════════════════════════════ */

  .whatsapp-btn {
    position: fixed;
    z-index: var(--z-sticky, 200);
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #25D366;
    border-radius: 50%;
    box-shadow: 0 4px 20px rgba(37, 211, 102, 0.35);
    text-decoration: none;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .whatsapp-btn:hover {
    background-color: #20BD5A;
    transform: scale(1.1);
    box-shadow: 0 6px 30px rgba(37, 211, 102, 0.45);
  }

  .whatsapp-btn:active {
    transform: scale(1.05);
  }

  .whatsapp-btn:focus-visible {
    outline: none;
    box-shadow:
      0 0 0 4px #FFFFFF,
      0 0 0 8px rgba(37, 211, 102, 0.5),
      0 4px 20px rgba(37, 211, 102, 0.35);
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     ICON
     ═══════════════════════════════════════════════════════════════════════════ */

  .whatsapp-btn__icon {
    width: 32px;
    height: 32px;
    color: #FFFFFF;
    flex-shrink: 0;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     TOOLTIP
     ═══════════════════════════════════════════════════════════════════════════ */

  .whatsapp-btn__tooltip {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    padding: 0.75rem 1rem;
    background-color: #102941;
    color: #FFFFFF;
    font-size: 1rem;
    font-weight: 500;
    white-space: nowrap;
    border-radius: 0.5rem;
    box-shadow: 0 4px 12px rgba(15, 23, 42, 0.15);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s ease,
      visibility 0s linear 0.2s;
    pointer-events: none;
  }

  .whatsapp-btn:hover .whatsapp-btn__tooltip {
    opacity: 1;
    visibility: visible;
    transition:
      opacity 0.2s ease 0.3s,
      visibility 0s linear 0.3s;
  }

  /* Tooltip positioned to the right of button */
  .whatsapp-btn__tooltip.tooltip--right {
    right: calc(100% + 0.75rem);
  }

  .whatsapp-btn__tooltip.tooltip--right::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 100%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: #102941;
  }

  /* Tooltip positioned to the left of button */
  .whatsapp-btn__tooltip.tooltip--left {
    left: calc(100% + 0.75rem);
  }

  .whatsapp-btn__tooltip.tooltip--left::after {
    content: '';
    position: absolute;
    top: 50%;
    right: 100%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-right-color: #102941;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     PULSE ANIMATION
     ═══════════════════════════════════════════════════════════════════════════ */

  .whatsapp-btn__pulse {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background-color: rgba(37, 211, 102, 0.4);
    animation: whatsapp-pulse 2s ease-out infinite;
    pointer-events: none;
  }

  @keyframes whatsapp-pulse {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  /* Stop pulse on hover */
  .whatsapp-btn:hover .whatsapp-btn__pulse {
    animation-play-state: paused;
    opacity: 0;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     RESPONSIVE
     ═══════════════════════════════════════════════════════════════════════════ */

  @media (max-width: 640px) {
    .whatsapp-btn {
      width: 56px;
      height: 56px;
    }

    .whatsapp-btn__icon {
      width: 28px;
      height: 28px;
    }

    /* Hide tooltip on mobile (tap shows it anyway) */
    .whatsapp-btn__tooltip {
      display: none;
    }
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     REDUCED MOTION
     ═══════════════════════════════════════════════════════════════════════════ */

  @media (prefers-reduced-motion: reduce) {
    .whatsapp-btn {
      transition: none;
    }

    .whatsapp-btn__pulse {
      animation: none;
      display: none;
    }

    .whatsapp-btn__tooltip {
      transition: none;
    }
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     PRINT STYLES - Hide button when printing
     ═══════════════════════════════════════════════════════════════════════════ */

  @media print {
    .whatsapp-btn {
      display: none;
    }
  }
</style>
