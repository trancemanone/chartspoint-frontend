---
/**
 * TrustIconGrid.astro
 *
 * Displays a grid of trust indicators with icons for the About page.
 * Institutional fintech design with premium Arabic aesthetics.
 *
 * Features:
 * - 2x3 or 3x2 responsive grid layout
 * - Subtle hover animations
 * - Icon + title + description format
 * - Gold accent on hover
 */

export interface TrustItem {
  icon: 'shield' | 'methodology' | 'education' | 'transparency' | 'expertise' | 'independence';
  title: string;
  description: string;
}

export interface Props {
  items: TrustItem[];
  title?: string;
  class?: string;
}

const {
  items,
  title = 'لماذا تثق بنا',
  class: className = '',
} = Astro.props;

// Icon SVG paths
const iconPaths = {
  shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
  methodology: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>`,
  education: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>`,
  transparency: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>`,
  expertise: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>`,
  independence: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>`,
};
---

<section class:list={['trust-grid', className]}>
  {title && (
    <h2 class="trust-grid__title">
      <span class="trust-grid__title-text">{title}</span>
    </h2>
  )}

  <div class="trust-grid__items">
    {items.map((item) => (
      <div class="trust-card">
        <div class="trust-card__icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            set:html={iconPaths[item.icon]}
          />
        </div>
        <h3 class="trust-card__title">{item.title}</h3>
        <p class="trust-card__description">{item.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .trust-grid {
    margin: 3rem 0;
  }

  .trust-grid__title {
    position: relative;
    margin: 0 0 2rem;
    padding-bottom: 1rem;
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: #102A43;
  }

  @media (min-width: 768px) {
    .trust-grid__title {
      font-size: 2rem;
      margin-bottom: 2.5rem;
    }
  }

  .trust-grid__title::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    height: 4px;
    width: 100%;
    background: linear-gradient(
      to left,
      #d5a035 0%,
      #d5a035 15%,
      #E2E8F0 15%,
      transparent 100%
    );
    border-radius: 2px;
  }

  .trust-grid__items {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .trust-grid__items {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .trust-grid__items {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  /* Trust Card */
  .trust-card {
    position: relative;
    padding: 2rem;
    background: #FFFFFF;
    border: 1px solid #E2E8F0;
    border-radius: 1rem;
    transition: all 0.25s ease;
  }

  .trust-card:hover {
    border-color: rgba(213, 160, 53, 0.3);
    box-shadow:
      0 4px 16px rgba(15, 23, 42, 0.06),
      0 8px 32px rgba(15, 23, 42, 0.04);
    transform: translateY(-2px);
  }

  .trust-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin-bottom: 1.25rem;
    background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
    border-radius: 1rem;
    color: #d5a035;
    transition: all 0.25s ease;
  }

  .trust-card:hover .trust-card__icon {
    background: linear-gradient(135deg, rgba(213, 160, 53, 0.1) 0%, rgba(213, 160, 53, 0.05) 100%);
    color: #b8892a;
  }

  .trust-card__title {
    margin: 0 0 0.75rem;
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: #102A43;
    line-height: 1.3;
  }

  .trust-card__description {
    margin: 0;
    font-size: 1rem;
    line-height: 1.7;
    color: #475569;
  }

  @media (min-width: 768px) {
    .trust-card__description {
      font-size: 1.0625rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .trust-card,
    .trust-card__icon {
      transition: none;
    }

    .trust-card:hover {
      transform: none;
    }
  }
</style>
