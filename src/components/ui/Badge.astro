---
/**
 * Badge.astro
 * Premium badge/tag component for CHARTSPOINT fintech platform
 *
 * Features:
 * - Multiple variants: filled, soft, outlined
 * - Pillar color variants: basics, indicators, tools, tactics
 * - Status variants: success, error, warning, info
 * - Size variants: sm, md, lg
 * - Icon support
 * - Removable option
 * - Full RTL support
 * - Optimized for users aged 40-70
 */

import type { PillarSlug } from '@lib/types';

export interface Props {
  /** Badge variant style */
  variant?: 'filled' | 'soft' | 'outlined';
  /** Badge color scheme */
  color?: 'default' | 'gold' | 'success' | 'error' | 'warning' | 'info' | PillarSlug;
  /** Badge size */
  size?: 'sm' | 'md' | 'lg';
  /** Render as pill (full rounded) */
  pill?: boolean;
  /** Show remove button */
  removable?: boolean;
  /** Link URL */
  href?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  variant = 'filled',
  color = 'default',
  size = 'md',
  pill = true,
  removable = false,
  href,
  class: className = '',
} = Astro.props;

// Build class list
const classes = [
  'badge',
  `badge--${variant}`,
  `badge--${color}`,
  `badge--${size}`,
  pill && 'badge--pill',
  href && 'badge--clickable',
  className,
].filter(Boolean).join(' ');

// Wrapper element
const Tag = href ? 'a' : 'span';
const wrapperAttrs = href ? { href } : {};
---

<Tag class={classes} {...wrapperAttrs}>
  {/* Icon Slot */}
  <span class="badge__icon">
    <slot name="icon" />
  </span>

  {/* Text */}
  <span class="badge__text">
    <slot />
  </span>

  {/* Remove Button */}
  {removable && (
    <button
      type="button"
      class="badge__remove"
      aria-label="إزالة"
      data-badge-remove
    >
      <svg viewBox="0 0 16 16" fill="currentColor">
        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
      </svg>
    </button>
  )}
</Tag>

<style>
  /* ═══════════════════════════════════════════════════════════════════════════
     BADGE BASE
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-body);
    font-weight: 600;
    line-height: 1;
    white-space: nowrap;
    text-decoration: none;
    border-radius: 0.375rem;
    transition:
      background-color 0.2s ease,
      border-color 0.2s ease,
      color 0.2s ease;
  }

  .badge--pill {
    border-radius: 9999px;
  }

  .badge--clickable {
    cursor: pointer;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     SIZES
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge--sm {
    padding: 0.25rem 0.625rem;
    font-size: 0.8125rem;
    min-height: 24px;
  }

  .badge--md {
    padding: 0.375rem 0.875rem;
    font-size: 0.875rem;
    min-height: 28px;
  }

  .badge--lg {
    padding: 0.5rem 1rem;
    font-size: 1rem;
    min-height: 32px;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     FILLED VARIANTS
     ═══════════════════════════════════════════════════════════════════════════ */

  /* Default */
  .badge--filled.badge--default {
    background-color: #64748B;
    color: #FFFFFF;
  }

  .badge--filled.badge--default.badge--clickable:hover {
    background-color: #475569;
  }

  /* Gold */
  .badge--filled.badge--gold {
    background-color: #d5a035;
    color: #102941;
  }

  .badge--filled.badge--gold.badge--clickable:hover {
    background-color: #b8892a;
  }

  /* Success */
  .badge--filled.badge--success {
    background-color: #10B981;
    color: #FFFFFF;
  }

  .badge--filled.badge--success.badge--clickable:hover {
    background-color: #059669;
  }

  /* Error */
  .badge--filled.badge--error {
    background-color: #B91C1C;
    color: #FFFFFF;
  }

  .badge--filled.badge--error.badge--clickable:hover {
    background-color: #991B1B;
  }

  /* Warning */
  .badge--filled.badge--warning {
    background-color: #D97706;
    color: #FFFFFF;
  }

  .badge--filled.badge--warning.badge--clickable:hover {
    background-color: #B45309;
  }

  /* Info */
  .badge--filled.badge--info {
    background-color: #3B82F6;
    color: #FFFFFF;
  }

  .badge--filled.badge--info.badge--clickable:hover {
    background-color: #2563EB;
  }

  /* Pillar: Basics */
  .badge--filled.badge--basics {
    background-color: #3B82F6;
    color: #FFFFFF;
  }

  .badge--filled.badge--basics.badge--clickable:hover {
    background-color: #2563EB;
  }

  /* Pillar: Indicators */
  .badge--filled.badge--indicators {
    background-color: #F97316;
    color: #FFFFFF;
  }

  .badge--filled.badge--indicators.badge--clickable:hover {
    background-color: #EA580C;
  }

  /* Pillar: Tools */
  .badge--filled.badge--tools {
    background-color: #10B981;
    color: #FFFFFF;
  }

  .badge--filled.badge--tools.badge--clickable:hover {
    background-color: #059669;
  }

  /* Pillar: Tactics */
  .badge--filled.badge--tactics {
    background-color: #8B5CF6;
    color: #FFFFFF;
  }

  .badge--filled.badge--tactics.badge--clickable:hover {
    background-color: #7C3AED;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     SOFT VARIANTS
     ═══════════════════════════════════════════════════════════════════════════ */

  /* Default */
  .badge--soft.badge--default {
    background-color: #F1F5F9;
    color: #475569;
  }

  .badge--soft.badge--default.badge--clickable:hover {
    background-color: #E2E8F0;
  }

  /* Gold */
  .badge--soft.badge--gold {
    background-color: #FAF0D8;
    color: #9a7223;
  }

  .badge--soft.badge--gold.badge--clickable:hover {
    background-color: #F5E2B5;
  }

  /* Success */
  .badge--soft.badge--success {
    background-color: #D1FAE5;
    color: #047857;
  }

  .badge--soft.badge--success.badge--clickable:hover {
    background-color: #A7F3D0;
  }

  /* Error */
  .badge--soft.badge--error {
    background-color: #FEE2E2;
    color: #B91C1C;
  }

  .badge--soft.badge--error.badge--clickable:hover {
    background-color: #FECACA;
  }

  /* Warning */
  .badge--soft.badge--warning {
    background-color: #FEF3C7;
    color: #B45309;
  }

  .badge--soft.badge--warning.badge--clickable:hover {
    background-color: #FDE68A;
  }

  /* Info */
  .badge--soft.badge--info {
    background-color: #DBEAFE;
    color: #1D4ED8;
  }

  .badge--soft.badge--info.badge--clickable:hover {
    background-color: #BFDBFE;
  }

  /* Pillar: Basics */
  .badge--soft.badge--basics {
    background-color: #DBEAFE;
    color: #1D4ED8;
  }

  .badge--soft.badge--basics.badge--clickable:hover {
    background-color: #BFDBFE;
  }

  /* Pillar: Indicators */
  .badge--soft.badge--indicators {
    background-color: #FFEDD5;
    color: #C2410C;
  }

  .badge--soft.badge--indicators.badge--clickable:hover {
    background-color: #FED7AA;
  }

  /* Pillar: Tools */
  .badge--soft.badge--tools {
    background-color: #D1FAE5;
    color: #047857;
  }

  .badge--soft.badge--tools.badge--clickable:hover {
    background-color: #A7F3D0;
  }

  /* Pillar: Tactics */
  .badge--soft.badge--tactics {
    background-color: #EDE9FE;
    color: #6D28D9;
  }

  .badge--soft.badge--tactics.badge--clickable:hover {
    background-color: #DDD6FE;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     OUTLINED VARIANTS
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge--outlined {
    background-color: transparent;
    border-width: 2px;
    border-style: solid;
  }

  /* Default */
  .badge--outlined.badge--default {
    border-color: #CBD5E1;
    color: #475569;
  }

  .badge--outlined.badge--default.badge--clickable:hover {
    background-color: #F8FAFC;
    border-color: #94A3B8;
  }

  /* Gold */
  .badge--outlined.badge--gold {
    border-color: #d5a035;
    color: #9a7223;
  }

  .badge--outlined.badge--gold.badge--clickable:hover {
    background-color: #FDF8ED;
  }

  /* Success */
  .badge--outlined.badge--success {
    border-color: #10B981;
    color: #047857;
  }

  .badge--outlined.badge--success.badge--clickable:hover {
    background-color: #ECFDF5;
  }

  /* Error */
  .badge--outlined.badge--error {
    border-color: #DC2626;
    color: #B91C1C;
  }

  .badge--outlined.badge--error.badge--clickable:hover {
    background-color: #FEF2F2;
  }

  /* Warning */
  .badge--outlined.badge--warning {
    border-color: #D97706;
    color: #B45309;
  }

  .badge--outlined.badge--warning.badge--clickable:hover {
    background-color: #FFFBEB;
  }

  /* Info */
  .badge--outlined.badge--info {
    border-color: #3B82F6;
    color: #1D4ED8;
  }

  .badge--outlined.badge--info.badge--clickable:hover {
    background-color: #EFF6FF;
  }

  /* Pillar: Basics */
  .badge--outlined.badge--basics {
    border-color: #3B82F6;
    color: #1D4ED8;
  }

  .badge--outlined.badge--basics.badge--clickable:hover {
    background-color: #EFF6FF;
  }

  /* Pillar: Indicators */
  .badge--outlined.badge--indicators {
    border-color: #F97316;
    color: #C2410C;
  }

  .badge--outlined.badge--indicators.badge--clickable:hover {
    background-color: #FFF7ED;
  }

  /* Pillar: Tools */
  .badge--outlined.badge--tools {
    border-color: #10B981;
    color: #047857;
  }

  .badge--outlined.badge--tools.badge--clickable:hover {
    background-color: #ECFDF5;
  }

  /* Pillar: Tactics */
  .badge--outlined.badge--tactics {
    border-color: #8B5CF6;
    color: #6D28D9;
  }

  .badge--outlined.badge--tactics.badge--clickable:hover {
    background-color: #F5F3FF;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     ICON
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .badge__icon:empty {
    display: none;
  }

  .badge__icon :global(svg) {
    width: 1em;
    height: 1em;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     TEXT
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge__text {
    display: inline-flex;
    align-items: center;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     REMOVE BUTTON
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge__remove {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.125em;
    height: 1.125em;
    padding: 0;
    margin-right: -0.25rem;
    background-color: transparent;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .badge__remove:hover {
    opacity: 1;
  }

  .badge__remove:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px currentColor;
  }

  .badge__remove svg {
    width: 0.75em;
    height: 0.75em;
  }

  /* ═══════════════════════════════════════════════════════════════════════════
     FOCUS STATE (for clickable badges)
     ═══════════════════════════════════════════════════════════════════════════ */

  .badge--clickable:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(213, 160, 53, 0.4);
  }
</style>

<script>
  // Handle badge removal
  document.addEventListener('click', (e) => {
    const removeBtn = (e.target as HTMLElement).closest('[data-badge-remove]');
    if (removeBtn) {
      const badge = removeBtn.closest('.badge');
      if (badge) {
        badge.remove();
        // Dispatch event
        document.dispatchEvent(new CustomEvent('badge:remove', {
          detail: { badge },
          bubbles: true,
        }));
      }
    }
  });
</script>
