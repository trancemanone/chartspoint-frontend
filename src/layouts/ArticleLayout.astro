            <!-- Author Card -->
            <div class="article-hero__author flex items-center gap-3 px-4 py-3 rounded-xl bg-white/5 border border-white/10 backdrop-blur-sm">
              {article.author.avatar && (
                authorUrl ? (
                  <a href={authorUrl} class="block rounded-full ring-2 ring-gold-500/50 hover:ring-gold-500 transition-all">
                    <img
                      src={article.author.avatar}
                      alt={article.author.name}
                      class="w-12 h-12 rounded-full object-cover"
                    />
                  </a>
                ) : (
                  <div class="ring-2 ring-gold-500/50 rounded-full">
                    <img
                      src={article.author.avatar}
                      alt={article.author.name}
                      class="w-12 h-12 rounded-full object-cover"
                    />
                  </div>
                )
              )}
              <div class="flex flex-col">
                {authorUrl ? (
                  <a href={authorUrl} class="font-heading font-bold text-white hover:text-gold-400 transition-colors">
                    {article.author.name}
                  </a>
                ) : (
                  <span class="font-heading font-bold text-white">{article.author.name}</span>
                )}
                <span class="text-sm text-white/60">خبير التحليل الفني</span>
              </div>
            </div>

            <!-- Stats Row -->
            <div class="flex flex-wrap items-center gap-4 text-white/70 text-sm">
              <!-- Publish Date -->
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{publishDate}</span>
              </div>

              <!-- Separator -->
              <span class="hidden sm:block w-1 h-1 rounded-full bg-white/30"></span>

              <!-- Modified Date -->
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <span>تحديث: {modifiedDate}</span>
              </div>

              <!-- Separator -->
              <span class="hidden sm:block w-1 h-1 rounded-full bg-white/30"></span>

              <!-- Reading Time -->
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{article.readingTime} دقائق</span>
              </div>
            </div>
          </div>

          <!-- Featured Image with Premium Frame -->
          {article.featuredImage && (
            <figure class="article-hero__image relative">
              <!-- Glow Behind Image -->
              <div class={`absolute -inset-2 rounded-2xl blur-xl opacity-30 ${
                article.pillar === 'basics' ? 'bg-blue-500' :
                article.pillar === 'indicators' ? 'bg-orange-500' :
                article.pillar === 'tools' ? 'bg-green-500' :
                article.pillar === 'tactics' ? 'bg-purple-500' : 'bg-teal-500'
              }`}></div>

              <!-- Image Container -->
              <div class="relative rounded-xl overflow-hidden border border-white/10 shadow-2xl">
                <!-- Top Accent Bar -->
                <div class={`absolute top-0 left-0 right-0 h-1 ${
                  article.pillar === 'basics' ? 'bg-gradient-to-l from-blue-400 via-blue-500 to-blue-600' :
                  article.pillar === 'indicators' ? 'bg-gradient-to-l from-orange-400 via-orange-500 to-orange-600' :
                  article.pillar === 'tools' ? 'bg-gradient-to-l from-green-400 via-green-500 to-green-600' :
                  article.pillar === 'tactics' ? 'bg-gradient-to-l from-purple-400 via-purple-500 to-purple-600' :
                  'bg-gradient-to-l from-teal-400 via-teal-500 to-teal-600'
