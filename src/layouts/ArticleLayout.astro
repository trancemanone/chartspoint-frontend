                {article.expertiseLevel === 'beginner' && <circle cx="10" cy="10" r="3"/>}
                {article.expertiseLevel === 'intermediate' && <><circle cx="7" cy="10" r="2"/><circle cx="13" cy="10" r="2"/></>}
                {article.expertiseLevel === 'advanced' && <><circle cx="6" cy="10" r="1.5"/><circle cx="10" cy="10" r="1.5"/><circle cx="14" cy="10" r="1.5"/></>}
