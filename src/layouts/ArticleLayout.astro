    </div>

    <!-- Premium Article Hero Section -->
    <header class="article-hero relative overflow-hidden">
      <!-- Background Layers -->
      <div class="article-hero__bg absolute inset-0">
        <!-- Primary Gradient -->
        <div class="absolute inset-0 bg-gradient-to-bl from-navy-900 via-navy-800 to-navy-950"></div>

