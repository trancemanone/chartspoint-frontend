              article.expertiseLevel === 'beginner' ? 'bg-emerald-500/20 border border-emerald-400/30 text-emerald-300' :
              article.expertiseLevel === 'intermediate' ? 'bg-amber-500/20 border border-amber-400/30 text-amber-300' :
              'bg-rose-500/20 border border-rose-400/30 text-rose-300'
