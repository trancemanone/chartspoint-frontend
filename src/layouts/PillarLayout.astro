---
/**
 * PillarLayout.astro
 *
 * Sophisticated pillar landing page layout for ITQQAN content pillars.
 * Displays hero section with pillar color, cluster navigation, and article grids.
 *
 * Pillars:
 * - Learn (تعلم) - Sapphire Blue - Educational content
 * - Accounts (الحسابات) - Brand Gold - Account opening guides
 * - Trust (الثقة) - Royal Purple - Trust and verification
 *
 * Features:
 * - Branded hero with pillar-specific colors
 * - Cluster navigation pills
 * - Featured articles section
 * - Article cards grid by cluster
 * - Cross-pillar navigation
 * - Trust signals and stats
 */

import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '@components/navigation/Breadcrumbs.astro';
import ArticleCard from '@components/content/ArticleCard.astro';
import type { PillarSlug, Article } from '@lib/types';
import { PILLARS, PILLAR_NAMES_AR, PILLAR_DESCRIPTIONS_AR, CLUSTER_NAMES_AR, CONTENT_STRUCTURE } from '@lib/content-structure';

export interface Props {
  pillar: PillarSlug;
  articles: Article[];
  /** Featured articles to highlight at the top */
  featuredArticles?: Article[];
}

const { pillar, articles, featuredArticles = [] } = Astro.props;

const pillarData = PILLARS[pillar];
const clusters = Object.keys(CONTENT_STRUCTURE[pillar]);

// Group articles by cluster
const articlesByCluster: Record<string, Article[]> = {};
for (const article of articles) {
  if (!articlesByCluster[article.cluster]) {
    articlesByCluster[article.cluster] = [];
  }
  articlesByCluster[article.cluster].push(article);
}

// Breadcrumbs
const breadcrumbs = [
  { label: 'الرئيسية', href: '/' },
  { label: PILLAR_NAMES_AR[pillar], href: `/${pillar}`, current: true },
];

// Pillar-specific styling
const pillarStyles = {
  learn: {
    bg: 'bg-learn-50',
    bgGradient: 'from-learn-100 via-learn-50 to-white',
    border: 'border-learn-500',
    text: 'text-learn-600',
    textDark: 'text-learn-700',
    accent: 'bg-learn-500',
    accentHover: 'hover:bg-learn-600',
    badge: 'badge-learn',
    cardClass: 'pillar-card-learn',
    heroPattern: 'radial-gradient(circle at 100% 0%, rgba(59, 130, 246, 0.12) 0%, transparent 50%)',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>`,
  },
  accounts: {
    bg: 'bg-accounts-50',
    bgGradient: 'from-accounts-100 via-accounts-50 to-white',
    border: 'border-accounts-500',
    text: 'text-accounts-600',
    textDark: 'text-accounts-700',
    accent: 'bg-accounts-500',
    accentHover: 'hover:bg-accounts-600',
    badge: 'badge-accounts',
    cardClass: 'pillar-card-accounts',
    heroPattern: 'radial-gradient(circle at 100% 0%, rgba(213, 160, 53, 0.12) 0%, transparent 50%)',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" /></svg>`,
  },
  trust: {
    bg: 'bg-trust-50',
    bgGradient: 'from-trust-100 via-trust-50 to-white',
    border: 'border-trust-500',
    text: 'text-trust-600',
    textDark: 'text-trust-700',
    accent: 'bg-trust-500',
    accentHover: 'hover:bg-trust-600',
    badge: 'badge-trust',
    cardClass: 'pillar-card-trust',
    heroPattern: 'radial-gradient(circle at 100% 0%, rgba(168, 85, 247, 0.12) 0%, transparent 50%)',
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
  },
}[pillar];

// Stats for each pillar
const pillarStats = {
  learn: [
    { number: '50+', label: 'مقال تعليمي' },
    { number: '10', label: 'دورات تدريبية' },
    { number: '5K+', label: 'قارئ شهري' },
  ],
  accounts: [
    { number: '15+', label: 'منصة مقارنة' },
    { number: '8', label: 'خطوات للفتح' },
    { number: '100%', label: 'دقة المعلومات' },
  ],
  trust: [
    { number: '20+', label: 'جهة رقابية' },
    { number: '50+', label: 'نصيحة أمان' },
    { number: '0', label: 'احتيال مكتشف' },
  ],
}[pillar];

// Page schema
const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": PILLAR_NAMES_AR[pillar],
  "description": PILLAR_DESCRIPTIONS_AR[pillar],
  "url": `https://itqqan.com/${pillar}`,
  "inLanguage": "ar",
  "isPartOf": {
    "@type": "WebSite",
    "name": "إتقان",
    "url": "https://itqqan.com"
  },
  "hasPart": clusters.map(cluster => ({
    "@type": "WebPage",
    "name": CLUSTER_NAMES_AR[cluster] || cluster,
    "url": `https://itqqan.com/${pillar}/${cluster}`
  }))
});

// Breadcrumb schema
const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    "item": item.current ? undefined : `https://itqqan.com${item.href}`
  }))
});
---

<BaseLayout
  title={PILLAR_NAMES_AR[pillar]}
  description={PILLAR_DESCRIPTIONS_AR[pillar]}
  canonical={`https://itqqan.com/${pillar}`}
  schema={pageSchema}
  pillar={pillar}
>
  <div class="pillar-page">
    <!-- Hero Section with Pillar Branding -->
    <section
      class={`relative overflow-hidden bg-gradient-to-b ${pillarStyles.bgGradient} py-16 lg:py-24`}
      style={`background-image: ${pillarStyles.heroPattern};`}
    >
      <!-- Decorative Elements -->
      <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-white/40 to-transparent rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-64 h-64 bg-gradient-to-tl from-white/30 to-transparent rounded-full blur-2xl translate-x-1/4 translate-y-1/4"></div>

      <div class="container mx-auto px-4 lg:px-8 relative">
        <!-- Breadcrumbs -->
        <Breadcrumbs items={breadcrumbs} />

        <!-- Hero Content -->
        <div class="mt-10 lg:mt-12 max-w-4xl">
          <!-- Pillar Icon -->
          <div class={`inline-flex items-center justify-center w-20 h-20 rounded-2xl ${pillarStyles.accent} text-white mb-6 shadow-lg`}>
            <Fragment set:html={pillarStyles.icon} />
          </div>

          <!-- Pillar Title -->
          <h1 class="text-display-lg lg:text-display-xl font-heading font-extrabold text-navy-900 mb-6 text-balance">
            {PILLAR_NAMES_AR[pillar]}
          </h1>

          <!-- Description -->
          <p class="text-body-xl text-slate-600 leading-relaxed max-w-3xl mb-10">
            {PILLAR_DESCRIPTIONS_AR[pillar]}
          </p>

          <!-- Stats Row -->
          <div class="flex flex-wrap gap-8 mb-10">
            {pillarStats.map((stat) => (
              <div class="text-center">
                <div class={`text-3xl lg:text-4xl font-bold ${pillarStyles.textDark}`} style="direction: ltr;">
                  {stat.number}
                </div>
                <div class="text-sm text-slate-500 mt-1">{stat.label}</div>
              </div>
            ))}
          </div>

          <!-- Cluster Navigation Pills -->
          <nav aria-label="تصفح المجموعات">
            <div class="flex flex-wrap gap-3">
              {clusters.map((cluster) => (
                <a
                  href={`#${cluster}`}
                  class={`
                    inline-flex items-center gap-2 px-5 py-3 rounded-full font-medium
                    border-2 ${pillarStyles.border} bg-white
                    transition-all duration-200
                    hover:${pillarStyles.accent} hover:text-white hover:border-transparent
                    hover:shadow-lg hover:-translate-y-0.5
                    focus:outline-none focus:ring-2 focus:ring-offset-2 ${pillarStyles.text}
                  `}
                >
                  <span class="w-2 h-2 rounded-full bg-current"></span>
                  {CLUSTER_NAMES_AR[cluster] || cluster}
                </a>
              ))}
            </div>
          </nav>
        </div>
      </div>
    </section>

    <!-- Featured Articles Section (if any) -->
    {featuredArticles.length > 0 && (
      <section class="py-12 lg:py-16 bg-white border-b border-slate-100">
        <div class="container mx-auto px-4 lg:px-8">
          <div class="flex items-center gap-4 mb-8">
            <div class={`w-1.5 h-10 rounded-full ${pillarStyles.accent}`}></div>
            <div>
              <h2 class="text-h2-mobile md:text-h2-desktop font-heading font-bold text-navy-900">
                مقالات مميزة
              </h2>
              <p class="text-slate-500 mt-1">اختيارات فريق إتقان لك</p>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {featuredArticles.slice(0, 3).map((article) => (
              <div class="card-featured">
                <ArticleCard article={article} />
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Clusters with Articles -->
    <section class="py-16 lg:py-20 bg-surface-page">
      <div class="container mx-auto px-4 lg:px-8">
        {clusters.map((cluster, index) => {
          const clusterArticles = articlesByCluster[cluster] || [];
          return (
            <div id={cluster} class="mb-20 last:mb-0 scroll-mt-28">
              <!-- Cluster Header -->
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
                <div class="flex items-center gap-4">
                  <div class={`w-1.5 h-14 rounded-full ${pillarStyles.accent}`}></div>
                  <div>
                    <span class={`text-sm font-medium ${pillarStyles.text} mb-1 block`}>
                      المجموعة {(index + 1).toLocaleString('ar-SA')}
                    </span>
                    <h2 class="text-h2-mobile md:text-h2-desktop font-heading font-bold text-navy-900">
                      {CLUSTER_NAMES_AR[cluster] || cluster}
                    </h2>
                  </div>
                </div>
                <a
                  href={`/${pillar}/${cluster}`}
                  class={`
                    inline-flex items-center gap-2 px-5 py-2.5 rounded-lg
                    ${pillarStyles.text} font-medium border ${pillarStyles.border}
                    hover:${pillarStyles.accent} hover:text-white hover:border-transparent
                    transition-all duration-200
                  `}
                >
                  عرض الكل
                  <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>

              <!-- Articles Grid -->
              {clusterArticles.length > 0 ? (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
                  {clusterArticles.slice(0, 6).map((article) => (
                    <div class={pillarStyles.cardClass}>
                      <ArticleCard article={article} />
                    </div>
                  ))}
                </div>
              ) : (
                <div class="content-box text-center py-12">
                  <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <p class="text-lg text-slate-500">
                    المقالات قادمة قريبا...
                  </p>
                </div>
              )}

              {clusterArticles.length > 6 && (
                <div class="mt-8 text-center">
                  <a
                    href={`/${pillar}/${cluster}`}
                    class={`
                      btn ${pillarStyles.accent} text-white ${pillarStyles.accentHover}
                      shadow-lg hover:shadow-xl
                    `}
                  >
                    عرض المزيد ({(clusterArticles.length - 6).toLocaleString('ar-SA')} مقالات اضافية)
                    <svg class="w-5 h-5 mr-2 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              )}

              {index < clusters.length - 1 && (
                <div class="divider-decorative mt-16">
                  <span class={`w-3 h-3 rounded-full ${pillarStyles.accent}`}></span>
                </div>
              )}
            </div>
          );
        })}
      </div>
    </section>

    <!-- Cross-Pillar Navigation -->
    <section class="section-navy py-16 lg:py-20">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-h2-mobile md:text-h2-desktop font-heading font-bold text-white mb-4">
            استكشف أقسام أخرى
          </h2>
          <p class="text-navy-200 text-lg max-w-2xl mx-auto">
            اكتشف المزيد من المحتوى التعليمي والأدوات المتاحة في منصة إتقان
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
          {(['learn', 'accounts', 'trust'] as PillarSlug[])
            .filter((p) => p !== pillar)
            .map((p) => {
              const pStyles = pillarStyles;
              const otherStyles = {
                learn: { border: 'border-learn-400', hover: 'hover:bg-learn-900/20', icon: pillarStyles.icon },
                accounts: { border: 'border-accounts-400', hover: 'hover:bg-accounts-900/20', icon: pillarStyles.icon },
                trust: { border: 'border-trust-400', hover: 'hover:bg-trust-900/20', icon: pillarStyles.icon },
              }[p];

              return (
                <a
                  href={`/${p}`}
                  class={`
                    group block p-6 lg:p-8 rounded-2xl
                    bg-navy-800/50 backdrop-blur-sm
                    border border-navy-700 ${otherStyles.hover}
                    transition-all duration-300
                    hover:border-opacity-60 hover:shadow-xl
                  `}
                >
                  <div class="flex items-start gap-4">
                    <div class={`
                      w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0
                      ${p === 'learn' ? 'bg-learn-500/20 text-learn-400' : ''}
                      ${p === 'accounts' ? 'bg-accounts-500/20 text-accounts-400' : ''}
                      ${p === 'trust' ? 'bg-trust-500/20 text-trust-400' : ''}
                    `}>
                      {p === 'learn' && (
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                      )}
                      {p === 'accounts' && (
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                        </svg>
                      )}
                      {p === 'trust' && (
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                      )}
                    </div>
                    <div class="flex-1">
                      <h3 class="text-xl font-heading font-bold text-white mb-2 group-hover:text-gold-300 transition-colors">
                        {PILLAR_NAMES_AR[p]}
                      </h3>
                      <p class="text-navy-200 text-sm leading-relaxed">
                        {PILLAR_DESCRIPTIONS_AR[p]}
                      </p>
                    </div>
                    <svg class="w-5 h-5 text-navy-400 group-hover:text-gold-400 transition-colors rotate-180 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </a>
              );
            })}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 lg:py-20 bg-white">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="cta-primary max-w-4xl mx-auto text-center">
          <h2 class="cta-primary-title">
            هل أنت مستعد لبدء رحلتك الاستثمارية؟
          </h2>
          <p class="cta-primary-text max-w-2xl mx-auto">
            انضم إلى آلاف المستثمرين العرب الذين يثقون في إتقان لتعلم أساسيات الاستثمار واتخاذ قرارات مالية واعية.
          </p>
          <a href="/accounts/open/steps" class="btn btn-lg">
            افتح حسابك الآن
            <svg class="w-5 h-5 mr-2 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </div>

  <!-- Additional Schema -->
  <Fragment slot="schema">
    <script type="application/ld+json" set:html={breadcrumbSchema} />
  </Fragment>
</BaseLayout>

<style>
  /* Pillar-specific hover animations */
  .pillar-card-learn:hover,
  .pillar-card-accounts:hover,
  .pillar-card-trust:hover {
    transform: translateY(-4px);
  }

  /* Smooth scroll offset for cluster anchors */
  [id] {
    scroll-margin-top: 7rem;
  }
</style>
