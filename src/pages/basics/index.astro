---
/**
 * Basics Pillar Index Page - Institutional Fintech Design
 *
 * Foundation Knowledge pillar for ChartsPoint
 * Clusters: intro, patterns, action, methods
 * Color: Blue #3B82F6
 *
 * Premium features:
 * - Sophisticated hero with glassmorphism
 * - Cluster cards with hover effects
 * - Recent articles section
 * - Educational focus per Vision Document
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import { PILLARS, CLUSTERS } from '@lib/types';
import { getPostsByPillar, transformToArticle } from '@lib/wordpress';

const pillar = PILLARS.basics;
const clusters = CLUSTERS.filter(c => c.pillar === 'basics');

// Fetch articles for this pillar
let articles: any[] = [];
try {
  const postsResponse = await getPostsByPillar('basics', 6);
  articles = postsResponse.data.map(transformToArticle);
} catch (error) {
  console.error('Error fetching basics posts:', error);
}

// Cluster descriptions
const clusterDescriptions: Record<string, string> = {
  'intro': 'مقدمة شاملة للتحليل الفني وأساسياته',
  'patterns': 'أنماط الشموع اليابانية والرسوم البيانية',
  'action': 'فهم حركة السعر وديناميكيات السوق',
  'methods': 'طرق التحليل المختلفة ومنهجياتها',
};

// Cluster icons
const clusterIcons: Record<string, string> = {
  'intro': 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
  'patterns': 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  'action': 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
  'methods': 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
};

const pageTitle = `${pillar.nameAr} | ChartsPoint`;
const pageDescription = `${pillar.description} - تعلم أساسيات التحليل الفني والشموع اليابانية وحركة السعر`;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pillar="basics"
>
  <!-- Premium Hero Section -->
  <section class="pillar-hero relative overflow-hidden py-20 lg:py-28 bg-gradient-to-br from-[#0A1628] via-[#0F2847] to-[#1A3A5C]">
    <!-- Background Effects -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] rounded-full blur-[100px] opacity-50" style="background: rgba(59, 130, 246, 0.15);"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] rounded-full blur-[80px] opacity-30" style="background: rgba(59, 130, 246, 0.1);"></div>
    </div>

    <!-- Grid Pattern -->
    <div class="absolute inset-0 opacity-[0.03]">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid-basics" width="60" height="60" patternUnits="userSpaceOnUse">
            <path d="M 60 0 L 0 0 0 60" fill="none" stroke="white" stroke-width="0.5" opacity="0.6"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-basics)"/>
      </svg>
    </div>

    <div class="container mx-auto px-4 lg:px-6 relative z-10">
      <!-- Breadcrumbs -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-white/60 text-sm">
          <li>
            <a href="/" class="hover:text-white/90 transition-colors">الرئيسية</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 rotate-180 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-white font-medium">{pillar.nameAr}</span>
          </li>
        </ol>
      </nav>

      <div class="max-w-4xl">
        <!-- Pillar Icon -->
        <div class="w-16 h-16 bg-basics-500/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-6 border border-basics-500/30">
          <svg class="w-8 h-8 text-basics-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 font-heading">
          {pillar.nameAr}
        </h1>

        <!-- Description -->
        <p class="text-xl md:text-2xl text-white/75 leading-relaxed mb-8 max-w-3xl">
          {pillar.description}
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap gap-6">
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
              <svg class="w-5 h-5 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div>
              <span class="text-2xl font-bold text-white">{clusters.length}</span>
              <span class="text-white/60 text-base mr-2">مجموعات</span>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
              <svg class="w-5 h-5 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <span class="text-2xl font-bold text-white">{articles.length}+</span>
              <span class="text-white/60 text-base mr-2">مقالات</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Wave Transition -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 80" fill="none" class="w-full h-auto" preserveAspectRatio="none">
        <path d="M0,40 C360,80 720,0 1080,40 C1260,60 1380,20 1440,40 L1440,80 L0,80 Z" fill="#F8FAFC"/>
      </svg>
    </div>
  </section>

  <!-- Clusters Section -->
  <section class="py-16 lg:py-24 bg-slate-50">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="section-header text-center mb-12">
        <h2 class="section-title font-heading text-3xl md:text-4xl font-bold text-navy-900 mb-4">
          المجموعات التعليمية
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          استكشف المحتوى التعليمي المنظم حسب الموضوع
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {clusters.map((cluster) => (
          <a
            href={`/basics/${cluster.slug}/`}
            class="cluster-card group relative bg-white rounded-xl border border-slate-200 p-6 lg:p-8 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
          >
            <!-- Accent Bar -->
            <div class="absolute top-0 right-0 w-1 h-full bg-basics-500 rounded-tr-xl rounded-br-xl"></div>

            <div class="flex items-start gap-5">
              <!-- Icon -->
              <div class="w-14 h-14 bg-basics-50 rounded-xl flex items-center justify-center flex-shrink-0 border border-basics-100 transition-all duration-300 group-hover:bg-basics-100 group-hover:scale-105">
                <svg class="w-7 h-7 text-basics-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={clusterIcons[cluster.slug] || clusterIcons['intro']} />
                </svg>
              </div>

              <div class="flex-1">
                <h3 class="text-xl font-bold text-navy-900 mb-2 font-heading group-hover:text-basics-700 transition-colors">
                  {cluster.nameAr}
                </h3>
                <p class="text-slate-600 text-[0.9375rem] leading-relaxed mb-4">
                  {clusterDescriptions[cluster.slug] || `استكشف مقالات ${cluster.nameAr}`}
                </p>

                <!-- CTA -->
                <span class="inline-flex items-center gap-2 text-basics-600 font-medium text-sm transition-all duration-200 group-hover:gap-3">
                  <span>استكشف المحتوى</span>
                  <svg class="w-4 h-4 rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  {articles.length > 0 && (
    <section class="py-16 lg:py-24 bg-white">
      <div class="container mx-auto px-4 lg:px-6">
        <div class="section-header text-center mb-12">
          <h2 class="section-title font-heading text-3xl md:text-4xl font-bold text-navy-900 mb-4">
            أحدث المقالات
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            مقالات تعليمية حديثة في أساسيات التحليل الفني
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {articles.slice(0, 6).map((article) => (
            <a
              href={`/${article.pillar}/${article.cluster}/${article.slug}/`}
              class="article-card group bg-white rounded-xl border border-slate-200 overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              {article.featuredImage && (
                <div class="aspect-[16/10] overflow-hidden">
                  <img
                    src={article.featuredImage.url}
                    alt={article.featuredImage.alt || article.title}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-5">
                <h3 class="font-heading text-lg font-bold text-navy-900 mb-2 line-clamp-2 group-hover:text-basics-700 transition-colors">
                  {article.title}
                </h3>
                {article.excerpt && (
                  <p class="text-slate-600 text-sm line-clamp-2 mb-4">
                    {article.excerpt}
                  </p>
                )}
                <div class="flex items-center justify-between text-sm text-slate-500">
                  <span class="flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {article.readingTime} دقائق
                  </span>
                  <span class="text-basics-600 font-medium group-hover:text-basics-700">
                    اقرأ المزيد
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  .section-title {
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 0;
    width: 60%;
    height: 3px;
    background: linear-gradient(90deg, #3B82F6 0%, transparent 100%);
    border-radius: 2px;
  }

  .cluster-card:focus-visible,
  .article-card:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px white, 0 0 0 6px #3B82F6;
  }

  @media (prefers-reduced-motion: reduce) {
    .cluster-card,
    .article-card {
      transition: none;
    }

    .cluster-card:hover,
    .article-card:hover {
      transform: none;
    }

    .article-card:hover img {
      transform: none;
    }
  }
</style>
