---
/**
 * Cookies Policy Page - سياسة ملفات تعريف الارتباط
 *
 * Fetches the "cookies" page content from WordPress CMS.
 * WordPress Page ID: 325
 */

import StaticPageLayout from '@layouts/StaticPageLayout.astro';
import { getPageBySlug } from '@lib/wordpress';

// Fetch page content from WordPress
const page = await getPageBySlug('cookies');

// Handle page not found
if (!page) {
  return Astro.redirect('/404');
}

const title = page.title.rendered;
const content = page.content.rendered;
const description = 'سياسة ملفات تعريف الارتباط (الكوكيز) لموقع إتقان. تعرف على كيفية استخدامنا للكوكيز لتحسين تجربتك.';
---

<StaticPageLayout
  title={title}
  content={content}
  description={description}
  lastModified={page.modified}
/>
