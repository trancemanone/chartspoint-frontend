---
/**
 * FAQ Page - الأسئلة الشائعة
 *
 * Fetches the "faq" page content from WordPress CMS.
 * WordPress Page ID: 321
 */

import StaticPageLayout from '@layouts/StaticPageLayout.astro';
import { getPageBySlug } from '@lib/wordpress';

// Fetch page content from WordPress
const page = await getPageBySlug('faq');

// Handle page not found
if (!page) {
  return Astro.redirect('/404');
}

const title = page.title.rendered;
const content = page.content.rendered;
const description = 'الأسئلة الشائعة حول إتقان ومحتواها التعليمي المالي. اعثر على إجابات لاستفساراتك الأكثر شيوعًا.';
---

<StaticPageLayout
  title={title}
  content={content}
  description={description}
  lastModified={page.modified}
/>
