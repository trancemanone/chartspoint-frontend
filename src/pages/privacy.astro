---
/**
 * Privacy Policy Page - سياسة الخصوصية
 *
 * Fetches the "privacy" page content from WordPress CMS.
 * WordPress Page ID: 3
 */

import StaticPageLayout from '@layouts/StaticPageLayout.astro';
import { getPageBySlug } from '@lib/wordpress';

// Fetch page content from WordPress
const page = await getPageBySlug('privacy');

// Handle page not found
if (!page) {
  return Astro.redirect('/404');
}

const title = page.title.rendered;
const content = page.content.rendered;
const description = 'سياسة الخصوصية لموقع إتقان. تعرف على كيفية جمع واستخدام وحماية بياناتك الشخصية.';
---

<StaticPageLayout
  title={title}
  content={content}
  description={description}
  lastModified={page.modified}
/>
