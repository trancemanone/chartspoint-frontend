---
/**
 * Terms and Conditions Page - الشروط والأحكام
 *
 * Fetches the "terms" page content from WordPress CMS.
 * WordPress Page ID: 323
 */

import StaticPageLayout from '@layouts/StaticPageLayout.astro';
import { getPageBySlug } from '@lib/wordpress';

// Fetch page content from WordPress
const page = await getPageBySlug('terms');

// Handle page not found
if (!page) {
  return Astro.redirect('/404');
}

const title = page.title.rendered;
const content = page.content.rendered;
const description = 'شروط وأحكام استخدام موقع إتقان. اقرأ القواعد والإرشادات التي تحكم استخدامك للمنصة.';
---

<StaticPageLayout
  title={title}
  content={content}
  description={description}
  lastModified={page.modified}
/>
