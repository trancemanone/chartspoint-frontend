---
/**
 * Tools Pillar Index Page - Institutional Fintech Design
 *
 * Practical Utilities pillar for ChartsPoint
 * Clusters: calc, charts, data
 * Color: Green #10B981
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import { PILLARS, CLUSTERS } from '@lib/types';
import { getPostsByPillar, transformToArticle } from '@lib/wordpress';

const pillar = PILLARS.tools;
const clusters = CLUSTERS.filter(c => c.pillar === 'tools');

// Fetch articles for this pillar
let articles: any[] = [];
try {
  const postsResponse = await getPostsByPillar('tools', 6);
  articles = postsResponse.data.map(transformToArticle);
} catch (error) {
  console.error('Error fetching tools posts:', error);
}

// Cluster descriptions
const clusterDescriptions: Record<string, string> = {
  'calc': 'حاسبات التداول: حجم المركز، نسب المخاطرة، والأرباح والخسائر',
  'charts': 'أدوات الرسم البياني ومنصات التحليل مثل TradingView',
  'data': 'مصادر البيانات المالية والاقتصادية الموثوقة',
};

// Cluster icons
const clusterIcons: Record<string, string> = {
  'calc': 'M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V13.5zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V18zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V13.5zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V18zm2.504-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zm0 2.25h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V18zm2.498-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zM8.25 6h7.5v2.25h-7.5V6zM12 2.25c-1.892 0-3.758.11-5.593.322C5.307 2.7 4.5 3.65 4.5 4.757V19.5a2.25 2.25 0 002.25 2.25h10.5a2.25 2.25 0 002.25-2.25V4.757c0-1.108-.806-2.057-1.907-2.185A48.507 48.507 0 0012 2.25z',
  'charts': 'M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z',
  'data': 'M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125',
};

const pageTitle = `${pillar.nameAr} | ChartsPoint`;
const pageDescription = `${pillar.description} - أدوات وحاسبات التداول والتحليل الفني`;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pillar="tools"
>
  <!-- Premium Hero Section -->
  <section class="pillar-hero relative overflow-hidden py-20 lg:py-28 bg-gradient-to-br from-[#041F15] via-[#052E1E] to-[#064028]">
    <!-- Background Effects -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] rounded-full blur-[100px] opacity-50" style="background: rgba(16, 185, 129, 0.15);"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] rounded-full blur-[80px] opacity-30" style="background: rgba(16, 185, 129, 0.1);"></div>
    </div>

    <!-- Grid Pattern -->
    <div class="absolute inset-0 opacity-[0.03]">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid-tools" width="60" height="60" patternUnits="userSpaceOnUse">
            <path d="M 60 0 L 0 0 0 60" fill="none" stroke="white" stroke-width="0.5" opacity="0.6"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-tools)"/>
      </svg>
    </div>

    <div class="container mx-auto px-4 lg:px-6 relative z-10">
      <!-- Breadcrumbs -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-white/60 text-sm">
          <li>
            <a href="/" class="hover:text-white/90 transition-colors">الرئيسية</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 rotate-180 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-white font-medium">{pillar.nameAr}</span>
          </li>
        </ol>
      </nav>

      <div class="max-w-4xl">
        <!-- Pillar Icon -->
        <div class="w-16 h-16 bg-tools-500/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-6 border border-tools-500/30">
          <svg class="w-8 h-8 text-tools-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V13.5zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V18zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V13.5zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V18zm2.504-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zM8.25 6h7.5v2.25h-7.5V6zM12 2.25c-1.892 0-3.758.11-5.593.322C5.307 2.7 4.5 3.65 4.5 4.757V19.5a2.25 2.25 0 002.25 2.25h10.5a2.25 2.25 0 002.25-2.25V4.757c0-1.108-.806-2.057-1.907-2.185A48.507 48.507 0 0012 2.25z" />
          </svg>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 font-heading">
          {pillar.nameAr}
        </h1>

        <!-- Description -->
        <p class="text-xl md:text-2xl text-white/75 leading-relaxed mb-8 max-w-3xl">
          {pillar.description}
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap gap-6">
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
              <svg class="w-5 h-5 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <div>
              <span class="text-2xl font-bold text-white">{clusters.length}</span>
              <span class="text-white/60 text-base mr-2">مجموعات</span>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center border border-white/10">
              <svg class="w-5 h-5 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <span class="text-2xl font-bold text-white">{articles.length}+</span>
              <span class="text-white/60 text-base mr-2">مقالات</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Wave Transition -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 80" fill="none" class="w-full h-auto" preserveAspectRatio="none">
        <path d="M0,40 C360,80 720,0 1080,40 C1260,60 1380,20 1440,40 L1440,80 L0,80 Z" fill="#F8FAFC"/>
      </svg>
    </div>
  </section>

  <!-- Clusters Section -->
  <section class="py-16 lg:py-24 bg-slate-50">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="section-header text-center mb-12">
        <h2 class="section-title font-heading text-3xl md:text-4xl font-bold text-navy-900 mb-4">
          أدوات التداول
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          حاسبات وأدوات عملية لتحسين قراراتك التداولية
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {clusters.map((cluster) => (
          <a
            href={`/tools/${cluster.slug}/`}
            class="cluster-card group relative bg-white rounded-xl border border-slate-200 p-6 lg:p-8 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
          >
            <!-- Accent Bar -->
            <div class="absolute top-0 right-0 w-1 h-full bg-tools-500 rounded-tr-xl rounded-br-xl"></div>

            <div class="flex flex-col items-center text-center">
              <!-- Icon -->
              <div class="w-16 h-16 bg-tools-50 rounded-xl flex items-center justify-center mb-5 border border-tools-100 transition-all duration-300 group-hover:bg-tools-100 group-hover:scale-105">
                <svg class="w-8 h-8 text-tools-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={clusterIcons[cluster.slug] || clusterIcons['calc']} />
                </svg>
              </div>

              <h3 class="text-xl font-bold text-navy-900 mb-2 font-heading group-hover:text-tools-700 transition-colors">
                {cluster.nameAr}
              </h3>
              <p class="text-slate-600 text-[0.9375rem] leading-relaxed mb-4">
                {clusterDescriptions[cluster.slug] || `استكشف ${cluster.nameAr}`}
              </p>

              <!-- CTA -->
              <span class="inline-flex items-center gap-2 text-tools-600 font-medium text-sm transition-all duration-200 group-hover:gap-3">
                <span>استكشف</span>
                <svg class="w-4 h-4 rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Articles -->
  {articles.length > 0 && (
    <section class="py-16 lg:py-24 bg-white">
      <div class="container mx-auto px-4 lg:px-6">
        <div class="section-header text-center mb-12">
          <h2 class="section-title font-heading text-3xl md:text-4xl font-bold text-navy-900 mb-4">
            أحدث المقالات
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            مقالات تعليمية حديثة في أدوات التداول
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {articles.slice(0, 6).map((article) => (
            <a
              href={`/${article.pillar}/${article.cluster}/${article.slug}/`}
              class="article-card group bg-white rounded-xl border border-slate-200 overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              {article.featuredImage && (
                <div class="aspect-[16/10] overflow-hidden">
                  <img
                    src={article.featuredImage.url}
                    alt={article.featuredImage.alt || article.title}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-5">
                <h3 class="font-heading text-lg font-bold text-navy-900 mb-2 line-clamp-2 group-hover:text-tools-700 transition-colors">
                  {article.title}
                </h3>
                {article.excerpt && (
                  <p class="text-slate-600 text-sm line-clamp-2 mb-4">
                    {article.excerpt}
                  </p>
                )}
                <div class="flex items-center justify-between text-sm text-slate-500">
                  <span class="flex items-center gap-1.5">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {article.readingTime} دقائق
                  </span>
                  <span class="text-tools-600 font-medium group-hover:text-tools-700">
                    اقرأ المزيد
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  .section-title {
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    right: 0;
    width: 60%;
    height: 3px;
    background: linear-gradient(90deg, #10B981 0%, transparent 100%);
    border-radius: 2px;
  }

  .cluster-card:focus-visible,
  .article-card:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px white, 0 0 0 6px #10B981;
  }

  @media (prefers-reduced-motion: reduce) {
    .cluster-card,
    .article-card {
      transition: none;
    }

    .cluster-card:hover,
    .article-card:hover {
      transform: none;
    }

    .article-card:hover img {
      transform: none;
    }
  }
</style>
